{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "${oidc_provider_arn}"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "${oidc_provider_host}:aud": "sts.amazonaws.com",
          "${oidc_provider_host}:sub": "system:serviceaccount:${service_account_namespace}:${service_account_name}"
        }
      }
    }
  ]
}
